<header class="d-flex align-items-center p-3 fs-4 text-white bg-primary">
  <%= link_to categories_path do %>
    <i class="fa fa-arrow-left text-white"></i>
  <% end %>
  <span class="w-100 text-center">Transactions</span>
  <i class="fa fa-search"></i>
</header>

<div class="card mb-5">
  <div class="card-body d-flex justify-content-between">
    <h2><%= @category.name %></h2>
    <h3>$<%= @category.total_amount %></h3>
  </div>
</div>

<div class="list-group m-2 pb-5">
  <% @operations.each do |operation| %>
    <div class="list-group-item card p-0 mb-2">
      <div class="card-body d-flex justify-content-between align-items-center pt-3">
        <h2><%= operation.name %></h2>
        <h3>$<%= operation.amount %></h3>
      </div>
    </div>
  <% end %>
</div>

<div class="fixed-bottom bg-success py-3 text-center">
  <%= link_to "Add a new transaction", new_operation_path(category_id: @category.id), class: "border px-5 py-2 text-decoration-none", style: "color: #fff" %>
</div>
