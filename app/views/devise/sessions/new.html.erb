<header class="d-flex align-items-center p-3" style="background-color: #3778c2">
  <i class="fa fa-arrow-left"></i>
  <span class="w-100 text-center">Login</span>
</header>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mt-3"}) do |f| %>
  <div class="card">
    <div class="form-floating ms-3">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control border-start-0 border-top-0 border-end-0 border-bottom-0 shadow-none", placeholder: "John Doe" %>
      <%= f.label :name %>
    </div>

    <div class="form-floating ms-3">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control border-start-0 border-end-0 shadow-none", placeholder: "******" %>
      <%= f.label :password %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check ms-3 py-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>
  </div>

  <div class="fixed-bottom bg-success py-2 text-center">
    <%= f.submit "Log in", class: "btn btn-success border px-5", style: "color: #fff" %>
  </div>
<% end %>

<p class="ms-3 mt-1"><%= link_to "Forgot your password?", new_password_path(resource_name) %></p>
<p class="ms-3 mt-1">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
