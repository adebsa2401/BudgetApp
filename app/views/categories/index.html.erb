<header class="d-flex align-items-center p-3" style="background-color: #3778c2">
  <i class="fa fa-bars"></i>
  <span class="w-100 text-center">Categories</span>
  <i class="fa fa-search"></i>
</header>

<div class="list-group m-2 pb-5">
  <% @categories.each do |category| %>
    <%= link_to category_operations_path(category), class: "list-group-item card p-0 mb-2" do %>
      <h2 class="card-header"><%= category.name %></h2>
      <div class="card-body d-flex justify-content-between align-items-center pt-3">
        <%= image_tag "uploads/#{category.icon_url}", class: "img-thumbnail w-25 p-0", style: "aspect-ratio: 1" %>
        <span style="font-size: xx-large">$<%= category.total_amount %></span>
      </div>
    <% end %>
  <% end %>
</div>

<div class="fixed-bottom bg-success py-3 text-center">
  <%= link_to "Add a new category", new_category_path, class: "border px-5 py-2 text-decoration-none", style: "color: #fff" %>
</div>
